{% if course.illustration starts with 'http://' or course.illustration starts with 'https://' %}
  {% set illustration = course.illustration %}
{% else %}
  {% set illustration = asset('images/' ~ course.illustration) %}
{% endif %}

<div class="col-sm-12 col-md-4 col-lg-3 col-12 mb-3">
  <a title="{{ 'course.made_by'|trans({ '%trainer%': (course.trainer.firstname|capitalize) ~ ' ' ~ (course.trainer.lastname|upper) }) }}" href="{{ path('app_embed', { slide: course.link }) }}" class="text-black text-decoration-none">
    <div class="card">
      <span class="card-img-top text-center"><img class="img-course" alt="Illustration {{ course.label }}" src="{{ illustration }}" loading="lazy" /></span>
      <div class="card-body">
        <h5 class="card-title text-decoration-underline font-weight-bold">{{ course.title }}</h5>
        <p class="card-text">{{ course.synopsis }}</p>
      </div>
    </div>
  </a>
</div>
