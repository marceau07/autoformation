{% extends 'base.html.twig' %}

{% block title %}Quiz index{% endblock %}

{% block main %}
    <div class="container-fluid mb-3">
        <div>
            {% include '_components/_subnavbar.html.twig' with {'choosenElement': "quiz"} %}
        </div>
    
        <div class="tab-content">
            <div class="tab-pane container-fluid active">
                <div class="mt-2 mb-2">
                    <a role="button" class="btn btn-primary" href="{{ path('app_quiz_new') }}"><i class="fa-solid fa-square-poll-horizontal"></i>&nbsp;{{ 'global.btn_add'|trans }}</a>
                    <a role="button" class="btn btn-primary" href="{{ path('app_quiz_theme_new') }}"><i class="fa-solid fa-brush"></i>&nbsp;{{ 'global.btn_add'|trans }}</a>
                </div>
                <div>
                    <table class="table table-bordered table-striped display responsive nowrap" style="margin: 0 auto;" id="list_quiz_themes">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Uuid</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for quiz in quizzes %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_quiz_show', { id: quiz.id }) }}"><i class="fas fa-eye"></i></a>
                                    <a href="{{ path('app_quiz_edit', { id: quiz.id }) }}"><i class="fas fa-pen"></i></a>
                                    <a href="{{ path('app_quiz_row_new', { id: quiz.id }) }}"><i class="fas fa-add"></i></a>
                                </td>
                                <td>{{ quiz.id }}</td>
                                <td>{{ quiz.title }}</td>
                                <td>{{ quiz.uuid }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
