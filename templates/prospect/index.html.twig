{% extends 'base.html.twig' %}

{% block title %}
  Liste des prospects
{% endblock %}

{% block main %}
  <div class="container-fluid mb-3">
    <div>
      {% include '_components/_subnavbar.html.twig' with { 
        'choosenElement': "prospect"
        } 
      %}
    </div>
  
    <div class="tab-content">
      <div class="tab-pane container-fluid active">
        <div class="mt-2 mb-2">
          <a role="button" class="btn btn-primary" href="{{ path('app_prospect_new') }}">Ajouter un prospect</a>
        </div>
        <div>
          <table class="table table-bordered table-striped" style="margin: 0 auto;" id="list_prospects">
            <thead>
                <tr>
                    <th>actions</th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Siren</th>
                    <th>Nic</th>
                    <th>Number</th>
                    <th>Street</th>
                    <th>Additional_address</th>
                    <th>Postal_code</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Email</th>
                    <th>Phone_number</th>
                    <th>Phone_number_bis</th>
                </tr>
            </thead>
            <tbody>
            {% for prospect in prospects %}
                <tr>
                    <td>
                        <a href="{{ path('app_prospect_show', {'id': prospect.id}) }}">show</a>
                        <a href="{{ path('app_prospect_edit', {'id': prospect.id}) }}">edit</a>
                    </td>
                    <td>{{ prospect.id }}</td>
                    <td>{{ prospect.name }}</td>
                    <td>{{ prospect.siren }}</td>
                    <td>{{ prospect.nic }}</td>
                    <td>{{ prospect.number }}</td>
                    <td>{{ prospect.street }}</td>
                    <td>{{ prospect.additionalAddress }}</td>
                    <td>{{ prospect.postalCode }}</td>
                    <td>{{ prospect.city }}</td>
                    <td>{{ prospect.country }}</td>
                    <td>{{ prospect.email }}</td>
                    <td>{{ prospect.phoneNumber }}</td>
                    <td>{{ prospect.phoneNumberBis }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="14">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block js %}
<script>
  $(document).ready(function() {
    $('#list_prospects').DataTable().destroy();
    $('#list_prospects').DataTable({
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true,
      "language": {
        "url": "https://cdn.datatables.net/plug-ins/1.10.25/i18n/{{ app.request.attributes.get('_locale') == 'fr' ? 'French' : 'English' }}.json"
      }
    });
  });
</script>
{% endblock %}