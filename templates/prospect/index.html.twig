{% extends 'base.html.twig' %}

{% block title %}
  Liste des prospects
{% endblock %}

{% block main %}
  <div class="container-fluid mb-3">
    <div>
      {% include '_components/_subnavbar.html.twig' with { 
        'choosenElement': "prospect"
        } 
      %}
    </div>
  
    <div class="tab-content">
      <div class="tab-pane container-fluid active">
        <div class="mt-2 mb-2">
          <a role="button" class="btn btn-primary" href="{{ path('app_prospect_new') }}">{{ 'global.btn_add'|trans }}</a>
        </div>
        <div>
          <table class="table table-bordered table-striped display responsive nowrap" style="margin: 0 auto;" id="list_prospects">
            <thead>
              <tr>
                <th>#</th>
                <th>{{ 'administration.prospect.id'|trans }}</th>
                <th>{{ 'administration.prospect.name'|trans }}</th>
                <th>{{ 'administration.prospect.siren'|trans }}</th>
                <th>{{ 'administration.prospect.nic'|trans }}</th>
                <th>{{ 'administration.prospect.address_number'|trans }}</th>
                <th>{{ 'administration.prospect.address_street'|trans }}</th>
                <th>{{ 'administration.prospect.address_additional_information'|trans }}</th>
                <th>{{ 'administration.prospect.address_zipcode'|trans }}</th>
                <th>{{ 'administration.prospect.address_city'|trans }}</th>
                <th>{{ 'administration.prospect.address_country'|trans }}</th>
                <th>{{ 'administration.prospect.email'|trans }}</th>
                <th>{{ 'administration.prospect.phone_number'|trans }}</th>
                <th>{{ 'administration.prospect.phone_number_bis'|trans }}</th>
              </tr>
            </thead>
            <tbody>
            {% for prospect in prospects %}
              <tr>
                <td>
                    <a href="{{ path('app_prospect_show', {'id': prospect.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_prospect_edit', {'id': prospect.id}) }}"><i class="fas fa-pen"></i></a>
                </td>
                <td>{{ prospect.id }}</td>
                <td>{{ prospect.name }}</td>
                <td>{{ prospect.siren }}</td>
                <td>{{ prospect.nic }}</td>
                <td>{{ prospect.number }}</td>
                <td>{{ prospect.street }}</td>
                <td>{{ prospect.additionalAddress }}</td>
                <td>{{ prospect.postalCode }}</td>
                <td>{{ prospect.city }}</td>
                <td>{{ prospect.country }}</td>
                <td>{{ prospect.email }}</td>
                <td>{{ prospect.phoneNumber }}</td>
                <td>{{ prospect.phoneNumberBis }}</td>
              </tr>
            {% else %}
              <tr>
                <td colspan="14">{{ 'administration.prospect.no_prospect'|trans }}</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block js %}
<script>
  $(document).ready(function() {
    {% if prospects is defined and prospects is not empty %}
      $('#list_prospects').DataTable({
        "destroy": true,
        "paging": true,
        "lengthChange": true,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": true,
        // "scrollX": true, // If you want horizontal scrolling, and not responsive
        "responsive": {
          "details": true // If you want to show details in a responsive way
        },
        "language": {
          "url": "https://cdn.datatables.net/plug-ins/1.10.25/i18n/{{ app.request.locale == 'en' ? 'English' : 'French' }}.json"
        }
      });
    {% endif %}
  });
</script>
{% endblock %}