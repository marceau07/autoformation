{% extends 'base.html.twig' %}

{% block title %}
  Liste des formateur/trices
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block main %}
  <div class="container-fluid mb-3">
    <div>
      {% include '_components/_subnavbar.html.twig' with { 
        'choosenElement': "trainer"
        } 
      %}
    </div>
  
    <div class="tab-content">
      <div class="tab-pane container-fluid active">
        <div class="mt-2 mb-2">
          <a role="button" class="btn btn-primary" href="{{ path('app_trainer_new') }}">{{ 'global.btn_add'|trans }}</a>
        </div>
        <div>
          <table class="table table-bordered table-striped display responsive nowrap" style="margin: 0 auto;" id="list_trainers">
            <thead>
              <tr>
                <th>#</th>
                <th>{{ 'administration.trainer.id'|trans }}</th>
                <th>{{ 'administration.trainer.username'|trans }}</th>
                <th>{{ 'administration.trainer.lastname'|trans }}</th>
                <th>{{ 'administration.trainer.firstname'|trans }}</th>
                <th>{{ 'administration.trainer.role'|trans }}</th>
                <th>{{ 'administration.trainer.email'|trans }}</th>
                <th>{{ 'administration.trainer.active'|trans }}</th>
                <th>{{ 'administration.trainer.signature'|trans }}</th>
                <th>{{ 'administration.trainer.uuid'|trans }}</th>
                <th>{{ 'administration.trainer.phone_number'|trans }}</th>
                <th>{{ 'administration.trainer.entrance_date'|trans }}</th>
              </tr>
            </thead>
            <tbody>
              {% for trainer in trainers %}
                <tr>
                  <td class="text-center">
                    <a href="{{ path('app_trainer_show', { uuid: trainer.uuid }) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_trainer_edit', { uuid: trainer.uuid }) }}"><i class="fas fa-pen"></i></a>
                  </td>
                  <td>{{ trainer.id }}</td>
                  <td>{{ trainer.username }}</td>
                  <td>{{ trainer.lastName }}</td>
                  <td>{{ trainer.firstName }}</td>
                  <td>{{ trainer.roles ? trainer.roles|json_encode:'' }}</td>
                  <td>{{ trainer.email }}</td>
                  <td>{{ trainer.activated ? 'global.yes'|trans : 'global.no'|trans }}</td>
                  <td>{% if trainer.signature is defined and trainer.signature is not empty %}
                    <img src="{{ trainer.signature }}" alt="Signature de {{ trainer.username }}">
                    {% else %}
                    {{ 'administration.trainer.no_signature'|trans({'%trainer%': trainer.username}) }}
                    {% endif %}
                  </td>
                  <td>{{ trainer.uuid }}</td>
                  <td>{{ trainer.phoneNumber }}</td>
                  <td>{{ trainer.entranceCodeDate ? trainer.entranceCodeDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="12">{{ 'administration.trainer.no_trainer'|trans }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block js %}
<script>
  $(document).ready(function() {
    $('#list_trainers').DataTable({
      "destroy": true,
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": true,
      // "scrollX": true, // If you want horizontal scrolling, and not responsive
      "responsive": {
        "details": true // If you want to show details in a responsive way
      },
      "language": {
        "url": "https://cdn.datatables.net/plug-ins/1.10.25/i18n/{{ app.request.locale == 'en' ? 'English' : 'French' }}.json"
      }
    });
  });
</script>
{% endblock %}