{% extends 'base.html.twig' %}

{% block title %}
  Trainer
{% endblock %}

{% block main %}
  <div class="container-fluid">
    <div class="row d-flex justify-content-around">
      <div class="col-3 mt-2 mb-2 text-start">
        <a href="{{ is_granted('ROLE_TRAINER') ? path('app_trainer_index') : path('app_home') }}" class="btn btn-success">{{ 'global.btn_back'|trans }}</a>
      </div>
      <div class="col-6 text-center mt-2 mb-2">
        <h1>Trainer</h1>
      </div>
      <div class="col-3 mt-2 mb-2 float-end text-end"></div>
    </div>

    <div class="table-responsive">
      <table class="table">
        <tbody>
          <tr>
            <th>Username</th>
            <td>{{ trainer.username }}</td>
          </tr>
          <tr>
            <th>LastName</th>
            <td>{{ trainer.lastName }}</td>
          </tr>
          <tr>
            <th>FirstName</th>
            <td>{{ trainer.firstName }}</td>
          </tr>
          <tr>
            <th>Email</th>
            <td>{{ trainer.email }}</td>
          </tr>
          {# <tr>
          <th>Signature</th>
          <td>
            {% if trainer.signature is defined and trainer.signature is not empty %}
              <img src="{{ trainer.signature }}" alt="Signature de {{ trainer.username }}" />
            {% else %}
              Pas de signature pour {{ trainer.username }}
            {% endif %}
          </td>
        </tr> #}
          <tr>
            <th>Uuid</th>
            <td>{{ trainer.uuid }}</td>
          </tr>
          <tr>
            <th>Role</th>
            <td>{{ trainer.role }}</td>
          </tr>
          <tr>
            <th>PhoneNumber</th>
            <td>{{ trainer.phoneNumber }}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  {% if is_granted('ROLE_TRAINER') %}
    <a href="{{ path('app_trainer_edit', { uuid: trainer.uuid }) }}" class="btn btn-warning">{{ 'global.btn_edit'|trans }}</a>
    {{ include('trainer/_delete_form.html.twig') }}
  {% endif %}
{% endblock %}
