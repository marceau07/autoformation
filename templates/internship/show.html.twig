{% extends 'base.html.twig' %}

{% block title %}
  Internship
{% endblock %}

{% block main %}
  <div class="container-fluid">
    <div class="row flex-start">
      <div class="col-3 mt-2 mb-2 text-start">
        <a href="{{ path('app_internship_index') }}" class="btn btn-success">{{ 'global.btn_back'|trans }}</a>
      </div>
      <div class="col-6 text-center mt-2 mb-2">
        <h1>Internship</h1>
      </div>
      <div class="col-3 mt-2 mb-2 text-end">
        <a href="{{ path('app_internship_edit', { id: internship.id }) }}" class="btn btn-warning">{{ 'global.btn_edit'|trans }}</a>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <table class="table">
          <tbody>
            <tr>
              <th>Id</th>
              <td>{{ internship.id }}</td>
            </tr>
            <tr>
              <th>Trainee</th>
              <td>{{ (internship.trainee.lastName|upper) ~ ' ' ~ (internship.trainee.firstName|capitalize) }}</td>
            </tr>
            <tr>
              <th>Prospect</th>
              <td>{{ internship.prospect.name ~ ' (' ~ internship.prospect.siren ~ ' ' ~ internship.prospect.nic ~ ')' }}</td>
            </tr>
            <tr>
              <th rowspan="3">Tuteur</th>
              <td>{{ (internship.tutorLastName|upper) ~ ' ' ~ (internship.tutorFirstName|capitalize) }}</td>
            </tr>
            <tr>
              <td>{{ internship.tutorEmail }}</td>
            </tr>
            <tr>
              <td>{{ internship.tutorPhoneNumber }}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-12">{{ include('internship/_delete_form.html.twig') }}</div>
    </div>
  </div>
{% endblock %}
