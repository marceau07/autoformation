{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}
{% block create %}
  <turbo-stream action="append" target="course_cohorts">
    <template>
      <div id="{{ 'course_cohort_' ~ id }}">#{{ id }} created</div>
    </template>
  </turbo-stream>
{% endblock %}

{% block update %}
  <turbo-stream action="update" target="course_cohort_{{ id }}">
    <template>#{{ id }} updated</template>
  </turbo-stream>
{% endblock %}

{% block remove %}
  <turbo-stream action="remove" target="course_cohort_{{ id }}"></turbo-stream>
{% endblock %}
