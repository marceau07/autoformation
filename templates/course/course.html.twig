{% extends 'base.html.twig' %}

{% block title %}
  Cours
{% endblock %}

{% block main %}
  <div class="container">
    <div class="row pt-5 cours">
      <h3>{{ 'course.text'|trans }}</h3>
      <div class="col-12">
        <div class="row pb-5" id="liste_cours">
          {% if listCourses is defined and listCourses is not empty %}
            {% for course in listCourses %}
              {% include '_components/_card.html.twig' %}
            {% endfor %}
          {% else %}
            <div class="col-3 offset-4 mt-5 text-center">
              <img src="{{ asset('/images/no_data.svg') }}" alt="{{ 'course.illustration_no_content_alt'|trans }}" />
              <h3 class="mt-3">{{ 'course.no_content'|trans }}</h3>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
