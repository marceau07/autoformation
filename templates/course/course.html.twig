{% extends 'base.html.twig' %}

{% block title %}
  Cours
{% endblock %}

{% block main %}
  <div class="container">
    <div class="row pt-5">
      {% include '_components/_searchbar.html.twig' %}
    </div>
    <div class="row pt-5 cours">
      <h3>Les cours</h3>
      <div class="col-12">
        <div class="row pb-5" id="liste_cours">
          {% if listCourses is defined and listCourses is not empty %}
            {% for course in listCourses %}
              <div class="col-xs-1 col-lg-3 mb-3">
                <a title="Cours fait par {{ course.last_name ~ ' ' ~ course.first_name }}" href="{{ path('app_embed', { slide: course.link }) }}" class="text-decoration-none text-black">
                  <div class="card">
                    <span class="card-img-top"><img class="img-course" alt="Illustration {{ course.label }}" src="{{ asset('/images/' ~ course.illustration) }}" loading="lazy" /></span>
                    <div class="card-body">
                      <h5 class="card-title text-decoration-underline font-weight-bold">{{ course.title }}</h5>
                      <p class="card-text">{{ course.synopsis }}</p>
                    </div>
                  </div>
                </a>
              </div>
            {% endfor %}
          {% else %}
            <div class="col-3 offset-4 mt-5 text-center">
              <img src="{{ asset('/images/no_data.svg') }}" alt="Illustration cours non trouvés" />
              <h3 class="mt-3">Aucun cours trouvé...</h3>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
