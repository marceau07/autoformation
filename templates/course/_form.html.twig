{{ form_start(form) }}
<div class="row">
    <div class="col-sm-12 col-md-3 col-lg-2 form-group">{{ form_row(form.title, { label: 'administration.course.title'|trans }) }}</div>
    <div class="col-sm-12 col-md-3 col-lg-2 form-group">{{ form_row(form.keywords, { label: 'administration.course.keywords'|trans }) }}</div>
    <div class="col-sm-12 col-md-3 col-lg-2 form-group">{{ form_row(form.link, { label: 'administration.course.link'|trans }) }}</div>
